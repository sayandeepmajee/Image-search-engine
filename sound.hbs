<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Jamendo Music Gallery</title>
  <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      background: #000000;
      color: #fff;
      font-family: 'Ubuntu', sans-serif;
      text-align: center;
      margin: 0;
      padding: 0;
    }
    h1 { margin: 20px 0; font-weight: 400; }

    /* üîç Search Bar */
    #search-bar {
      display: flex;
      justify-content: center;
      margin: 20px auto;
      width: 70%;
      max-width: 600px;
      background: #2a2a2a;
      border-radius: 40px;
      padding: 5px;
    }
    #search-bar input[type="text"] {
      flex: 1;
      padding: 12px 20px;
      border: none;
      border-radius: 40px 0 0 40px;
      font-size: 1rem;
      outline: none;
      background: transparent;
      color: white;
    }
    #search-bar button {
      padding: 12px 20px;
      border: none;
      background: linear-gradient(135deg, #4c4a4a, #5d5c5b);
      color: black;
      font-weight: bold;
      border-radius: 0 40px 40px 0;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    #search-bar button:hover { background: black; color: white; }

    /* üè∑Ô∏è Tags */
    .tags {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 10px;
      margin-bottom: 20px;
    }
    .tag {
      background: #333;
      padding: 6px 14px;
      border-radius: 20px;
      font-size: 0.9rem;
      cursor: pointer;
      transition: 0.3s;
    }
    .tag:hover { background: #ff6a00; color: white; }

    /* üé∂ Music Cards */
    #music-gallery {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(1000px, 1fr));
      gap: 20px;
      padding: 20px;
    }
    .music-card {
      background: #000000;
      padding: 15px;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.5);
      text-align: left;
      transition: 0.3s;
    }
    .music-card:hover {
      /* transform: translateY(-5px); */
      box-shadow: 0 6px 20px rgba(0,0,0,0.7);
    }
    .music-title {
      font-size: 1rem;
      margin-bottom: 10px;
      font-weight: 500;
    }
    audio { width: 100%; margin-bottom: 10px; }
    .download-btn {
      display: inline-block;
      padding: 6px 14px;
      font-size: 0.9rem;
      background: #ff6a00;
      color: white;
      border-radius: 20px;
      text-decoration: none;
      transition: 0.3s;
    }
    .download-btn:hover { background: #ff4500; }

    #show-more {
      margin: 20px auto;
      display: block;
      padding: 12px 30px;
      background: linear-gradient(135deg, #393938, #302e2f);
      color: white;
      font-size: 14px;
      font-weight: bold;
      border: none;
      border-radius: 30px;
      cursor: pointer;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
      transition: all 0.3s ease;
    }
    #show-more:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.5);
      background: linear-gradient(135deg, #ee0979, #ff6a00);
    }
  </style>
</head>
<body>
  <h1>Audio Search</h1>

  <!-- üîç Search Bar -->
  <div id="search-bar">
    <input type="text" id="search-input" placeholder="Search for music...">
    <button onclick="searchMusic()">Search</button>
  </div>

  <!-- üè∑Ô∏è Tags -->
  <div class="tags">
    <div class="tag" onclick="quickSearch('piano')">piano</div>
    <div class="tag" onclick="quickSearch('guitar')">guitar</div>
    <div class="tag" onclick="quickSearch('lofi')">lofi</div>
    <div class="tag" onclick="quickSearch('rock')">rock</div>
    <div class="tag" onclick="quickSearch('jazz')">jazz</div>
    <div class="tag" onclick="quickSearch('orchestra')">orchestra</div>
  </div>

  <!-- üé∂ Music Gallery -->
  <div id="music-gallery"></div>

  <button id="show-more" onclick="loadMore()">Show More</button>

  <script>
    const clientId = "b597c8b8"; // üîë Replace with your Jamendo Client ID
    const gallery = document.getElementById("music-gallery");
    const searchInput = document.getElementById("search-input");

    let query = "piano";
    let page = 1;

    async function fetchMusic() {
      const response = await fetch(
        `https://api.jamendo.com/v3.0/tracks/?client_id=${clientId}&format=json&limit=9&page=${page}&search=${encodeURIComponent(query)}`
      );
      const data = await response.json();
      console.log(data); // Debug

      data.results.forEach(track => {
        const card = document.createElement("div");
        card.classList.add("music-card");

        const title = document.createElement("div");
        title.classList.add("music-title");
        title.textContent = track.name + " - " + track.artist_name;

        const audio = document.createElement("audio");
        audio.controls = true;
        audio.src = track.audio;

        const downloadLink = document.createElement("a");
        downloadLink.href = track.audio;
        downloadLink.download = `${track.id}.mp3`;
        downloadLink.textContent = "‚¨áÔ∏è Download";
        downloadLink.classList.add("download-btn");

        card.appendChild(title);
        card.appendChild(audio);
        card.appendChild(downloadLink);
        gallery.appendChild(card);
      });
    }

    function searchMusic() {
      query = searchInput.value || "piano";
      page = 1;
      gallery.innerHTML = "";
      fetchMusic();
    }

    function quickSearch(tag) {
      query = tag;
      page = 1;
      gallery.innerHTML = "";
      fetchMusic();
    }

    function loadMore() {
      page++;
      fetchMusic();
    }

    fetchMusic();
  </script>
</body>
</html>



