<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Illustration Gallery</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
  <style>
    body {
      background: #111;
      color: #fff;
      font-family: Arial, sans-serif;
      text-align: center;
      margin: 0;
      padding: 0;
    }
    h1 {
      margin: 20px 0;
    }

    /* üîç Search Bar Styling */
    #search-bar {
      display: inline-flex;    
      margin: 20px;
      background: #1c1c1c;
      border-radius: 40px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.5);
      overflow: hidden;
    }

    #search-bar input[type="text"] {
      flex: 1;
      padding: 14px 20px;
      border: none;
      border-radius: 40px 0 0 40px;
      font-size: 1rem;
      outline: none;
      width: 400px;
      background: #2f3542;
      color: #fff;
      transition: all 0.3s ease;
    }

    #search-bar input[type="text"]:focus {
      background: #404a59;
    }

    #search-bar button {
      padding: 14px 24px;
      border: none;
      background: linear-gradient(135deg, #4c4a4a, #5d5c5b);
      color: white;
      font-weight: bold;
      border-radius: 0 40px 40px 0;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    #search-bar button:hover {
      background: linear-gradient(135deg, #ee0979, #ff6a00);
      color: #fff;
    }
    .tags {
      margin: 10px auto 30px;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 12px;
      max-width: 90%;
    }

    .tag {
      background: rgba(255, 255, 255, 0.1);
      padding: 8px 18px;
      border-radius: 20px;
      font-size: 0.9rem;
      cursor: pointer;
      transition: 0.3s;
    }

    .tag:hover {
      background: rgba(255, 255, 255, 0.3);
    }
    #illustration-gallery {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 15px;
      padding: 20px;
    }
    .illustration {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.5);
      display: block;
      transition: transform 0.3s;
    }
    /* .illustration:hover {
      transform: scale(1.05);
    } */
    #show-more {
      margin: 20px auto;
      display: block;
      padding: 12px 30px;
      background: linear-gradient(135deg, #393938, #302e2f);
      color: white;
      font-size: 12px;
      font-weight: bold;
      border: none;
      border-radius: 30px;
      cursor: pointer;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
      transition: all 0.3s ease;
    }
    #show-more:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.5);
      background: linear-gradient(135deg, #ee0979, #ff6a00);
    }
  </style>
</head>
<body>
  <h1 style="font-family: 'Ubuntu', sans-serif; font-weight: 300; font-style: normal;">Illustration Gallery</h1>

  <div id="search-bar">
    <input type="text" id="search-input" placeholder="Search for illustrations...">
    <button onclick="searchIllustrations()">Search</button>
  </div>
  <div class="tags">
    <div class="tag" onclick="quickSearch('illustration')">illustration</div>
    <div class="tag" onclick="quickSearch('fantasy')">fantasy</div>
    <div class="tag" onclick="quickSearch('animals')">animals</div>
    <div class="tag" onclick="quickSearch('flowers')">flowers</div>
    <div class="tag" onclick="quickSearch('technology')">technology</div>
    <div class="tag" onclick="quickSearch('people')">people</div>
    <div class="tag" onclick="quickSearch('landscape')">landscape</div>
  </div>

  <div id="illustration-gallery"></div>

  <button id="show-more" onclick="loadMore()">Show More</button>

  <script>
    const apiKey = "52445732-67c9e521deb33376f3adba550"; 
    const gallery = document.getElementById("illustration-gallery");
    const searchInput = document.getElementById("search-input");

    let query = "cartoon";  
    let page = 1;

    async function fetchIllustrations() {
      const response = await fetch(
        `https://pixabay.com/api/?key=${apiKey}&q=${encodeURIComponent(query)}&image_type=illustration&page=${page}&per_page=12`
      );
      const data = await response.json();
      data.hits.forEach(img => {
        const link = document.createElement("a");
        link.href = img.largeImageURL;
        link.download = `illustration-${img.id}.jpg`;
        const image = document.createElement("img");
        image.src = img.webformatURL;
        image.alt = img.tags;
        image.classList.add("illustration");

        link.appendChild(image);
        gallery.appendChild(link);
      });
    }

    function searchIllustrations() {
      query = searchInput.value || "illustration";
      page = 1;
      gallery.innerHTML = ""; 
      fetchIllustrations();
    }

    function loadMore() {
      page++;
      fetchIllustrations();
    }

    function quickSearch(keyword) {
      query = keyword;
      searchInput.value = keyword;
      page = 1;
      gallery.innerHTML = "";
      fetchIllustrations();
    }

    fetchIllustrations();
  </script>
</body>
</html>
