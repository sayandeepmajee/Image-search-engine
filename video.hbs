<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title> Video Gallery</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
  <style>
    body {
      background: #111;
      color: #fff;
      font-family: Arial, sans-serif;
      text-align: center;
      margin: 0;
      padding: 0;
    }
    h1 {
      margin: 20px 0;
    }
    #search-bar {
      display: inline-flex;    
      margin: 20px;
      background: #1c1c1c;
      border-radius: 40px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.5);
      overflow: hidden;
    }
    #search-bar input[type="text"] {
    flex: 1;
      padding: 14px 20px;
      border: none;
      border-radius: 40px 0 0 40px;
      font-size: 1rem;
      outline: none;
      width: 400px;
      background: #2f3542;
      color: #fff;
      transition: all 0.3s ease;
    }
    #search-bar input[type="text"]:focus {
      background: #3c3c3d;
    }
    #search-bar button {
      padding: 14px 24px;
      border: none;
      background: linear-gradient(135deg, #4c4a4a, #5d5c5b);
      color: white;
      font-weight: bold;
      border-radius: 0 40px 40px 0;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    #search-bar button:hover {
       background: linear-gradient(135deg, #ee0979, #ff6a00);
      color: #fff;
    }
    .tags {
      margin: 10px auto 30px;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 12px;
      max-width: 90%;
    }

    .tag {
      background: rgba(255, 255, 255, 0.1);
      padding: 8px 18px;
      border-radius: 20px;
      font-size: 0.9rem;
      cursor: pointer;
      transition: 0.3s;
    }

    .tag:hover {
      background: rgba(255, 255, 255, 0.3);
    }
    #video-gallery {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: 15px;
      padding: 20px;
    }
    video {
      width: 380px;     
      height: 200px;     
      object-fit: cover;  
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.5);
      display: block;
      margin: 0 auto;
    }
    #show-more {
      margin: 20px auto;
      display: block;
      padding: 12px 30px;
      background: linear-gradient(135deg, #393938, #302e2f);
      color: white;
      font-size: 12px;
      font-weight: bold;
      border: none;
      border-radius: 30px;
      cursor: pointer;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
      transition: all 0.3s ease;
    }

    #show-more:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.5);
      background: linear-gradient(135deg, #ee0979, #ff6a00);
    }
  </style>
</head>
<body>
  <h1 style="font-family: 'Ubuntu', sans-serif; font-weight: 300; font-style: normal;">Playback Interface</h1>

  <div id="search-bar">
    <input type="text" id="search-input" placeholder="Search for videos...">
    <button onclick="searchVideos()">Search</button>
  </div>
  <div class="tags">
    <div class="tag" onclick="quickSearch('nature')">nature</div>
    <div class="tag" onclick="quickSearch('rain')">rain</div>
    <div class="tag" onclick="quickSearch('anime')">anime</div>
    <div class="tag" onclick="quickSearch('forest')">forest</div>
    <div class="tag" onclick="quickSearch('space')">space</div>
    <div class="tag" onclick="quickSearch('music')">music</div>
    <div class="tag" onclick="quickSearch('beach')">beach</div>
  </div>

  <div id="video-gallery"></div>

  <button id="show-more" onclick="loadMore()">Show More</button>

  <script>
    const apiKey = "52445732-67c9e521deb33376f3adba550"; 
    const gallery = document.getElementById("video-gallery");
    const searchInput = document.getElementById("search-input");

    let query = "city";  
    let page = 1;

    async function fetchVideos() {
      const response = await fetch(
        `https://pixabay.com/api/videos/?key=${apiKey}&q=${encodeURIComponent(query)}&page=${page}&per_page=12`
      );
      const data = await response.json();
      data.hits.forEach(video => {
        const vid = document.createElement("video");
        vid.src = video.videos.medium.url;
        vid.controls = true;
        vid.autoplay = true;   
        vid.muted = true;      
        vid.loop = true;    
        gallery.appendChild(vid);
      });
    }

    function searchVideos() {
      query = searchInput.value || "music";
      page = 1;
      gallery.innerHTML = ""; 
      fetchVideos();
    }

    function loadMore() {
      page++;
      fetchVideos();
    }

    function quickSearch(keyword) {
      query = keyword;
      searchInput.value = keyword;
      page = 1;
      gallery.innerHTML = "";
      fetchVideos();
    }

    fetchVideos();
  </script>
</body>
</html>